<UserControl x:Class="JoinIT.Resources.Views.Controls.CoursesDataGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:JoinIT.Resources.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Image Name="imgCircle" Visibility="{Binding Path=SpinnerVisibility}" Width="100" Height="100" gif:ImageBehavior.AnimatedSource="/Resources/Assets/LoadSpinner.gif" />
            <DataGrid x:Name="CPlusPlusDataGrid"
                      HorizontalGridLinesBrush="DarkGray"
                      RowBackground="LightGray"
                      AlternatingRowBackground="White"
                      Visibility="{Binding Path=Visibility}"
                      ItemsSource="{Binding Path=CourseInfoModels}">
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
